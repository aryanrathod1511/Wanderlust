<% layout("/layouts/boilerplate")-%>
<body>
    <div class="row">
        <div class="col-8 offset-2">

     <div class="col-8 offset-2">
        <h3><b><%=listing.title%></b> </h3>
     </div>
   
    <div class="listing-card col-10 offset-1" >
        <img class="card-img-top show-img" src="<%=listing.image.url%>" alt="listing_image">
        <div class="card-body">
          <p class="card-text">
            <br>
            <%=listing.description%> <br>
            &#8377 <%=listing.price.toLocaleString("en-IN")%>/night <br>
            <%=listing.location%> <br>
            <%=listing.country%>
        
        
        </p>
        </div>
      </div>



    <ul>
        <div class="btns">
            <a href="/listings/<%=listing._id%>/edit"  class="btn btn-dark col-2 offset-1">Edit </a> 
       
            <br>
           

            
            <form method="POST" action="/listings/<%=listing._id%> ?_method=DELETE">
             <button class="btn btn-dark offset-4">Delete</button>
            </form>
        </div>
            
    </ul>

    
        <div class="col-10 offset-1">
            <hr style="width: 100%; height: 4px;">

            <h4>Leave a review</h4>
            <form method="POST" action="/listings/<%=listing._id%>/reviews" novalidate class="needs-validation">
                <div class="mt-3">
                    <label f or="rating" class="form-label">Rating</label>
                    <input type="range" min="1" max="10" id="rating" name="review[rating]" class="form-control form-range">
                </div>

                <div class="mb-3">
                    <label for="comment"
                    cols="30"
                    rows="5" class="form-label">Comments</label>
                    <textarea name="review[comment]" id="comment" class="form-control" required ></textarea>
                    <div class="invalid-feedback">Comments can't be empty</div>
                </div>
                <button class="btn btn-outline-dark mb-3">Submit</button>
            </form>

            <hr>
            <p><b>All reviews</b></p>
            <div class="row mb-3 ms-3">
                <% listing.reviews.forEach(review => { %>
                    <div class="col-6 mb-3">
                        <div class="card">
                            <div class="container">
                                <div class="card-body ms-3 mt-2">
                                    <h5 class="card-title">Aryan</h5>
                                    <p class="card-text"><%= review.comment %></p>
                                    <p class="card-text"><%= review.rating %></p> stars
                                </div>
                                <!-- <form>
                                    <button class="btn btn-sm btn-outline-dark mb-3 mt-4">Delete</button>
                                </form> -->
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>

</body>
</div>
</div>
